<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/rowStyle"
    android:background="@color/white">
    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tvTitle"
        style="@style/textStyle"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivPhoto"/>
    <TextView
        android:id="@+id/tvVip"
        style="@style/smallTextStyle"
        android:textSize="14sp"
        android:layout_marginLeft="12dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintLeft_toRightOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/corner_golden"
        android:textColor="@color/color_751816"
        android:text="三星VIP"/>
    <TextView
        android:id="@+id/tvCard"
        style="@style/smallTextStyle"
        android:textSize="14sp"
        android:layout_marginLeft="12dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintLeft_toRightOf="@id/tvVip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/corner_golden"
        android:textColor="@color/color_751816"
        android:text="三星VIP"/>
    <TextView
        android:id="@+id/tvDesc"
        style="@style/smallTextStyle"
        android:drawableRight="@drawable/action_menu_selector"
        android:drawablePadding="6dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>